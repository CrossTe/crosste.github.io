.c-pulseline
  margin auto
  height 1px
  width 0
  background-color #ccd7e4
  transition all 0.2s ease
  animation-name loading
  animation-duration 1.2s
  animation-timing-function ease-out
  animation-iteration-count infinite
  position absolute
@keyframes loading
  from
    width: 0
  to
    width: 100%
